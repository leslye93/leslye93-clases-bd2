BEGIN
GUARDAR_TAREA(VALOR,4,'PROGRAMACION DE LOS SERVICIOS WEB'); 
DBMS_OUTPUT.PUT_LINE('REGISTRO GUARDADO CON ID: ' ||VALOR); 
END; 
