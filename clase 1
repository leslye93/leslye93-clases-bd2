--/ SE USA SI QUIERES CORRER ESTE BLOQUE DESDE LINEA DE COMANDO Y MARCA LA TERMINACION DE BLOQUE PL SQL Y SU EJECUCION

DECLARE 
EDAD INTEGER;
EDAD_DIAS INTEGER;
BEGIN
EDAD:=21;
EDAD_DIAS:=EDAD*365;
SYS.DBMS_OUTPUT.PUT_LINE('TU EDAD EN DIAS ES:'||EDAD_DIAS);
END;

CREATE TABLE HOJA(ID INTEGER, EDAD INTEGER, NOMBRE VARCHAR(120));

BEGIN

FOR I IN 1...10 LOOP 
SYS.DBMS_OUTPUT.PUT_LINE(I|| 'PRIMER CICLO');
 INSERT INTO HOJA VALUES(I,21, 'lESLYE cASTANEDA LOPEZ');
END LOOP;
END;

SELECT * FROM HOJA;
